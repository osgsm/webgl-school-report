---
import Layout from '../../layouts/Layout.astro';
---

<Layout classNames="overflow-hidden">
  <div id="webgl"></div>
</Layout>

<script>
  import { ThreeApp } from './_ThreeApp.ts';

  const wrapper = document.querySelector<HTMLDivElement>('#webgl');

  if (wrapper) {
    const app = new ThreeApp(wrapper);
    app.render();
  }
</script>
